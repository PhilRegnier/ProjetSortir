{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | Profil{% endblock %}

{% block body %}
    <h1 class="detail-sortie-title">Profil de {{ app.user.pseudo }}</h1>
    <div class="profil-bloc">
        <div class="profil-pic">
            <img class="avatar" src="{{ asset('../ressources/images/avatar/' ~ app.user.image) }}" alt="avatar">
        </div>
        <div class="participant-form">
            {{ form_start(participantForm) }}
            {{ form_row(participantForm.pseudo, { label: 'Pseudo' }) }}
            {{ form_row(participantForm.prenom, { label: 'Prénom' }) }}
            {{ form_row(participantForm.nom, { label: 'Nom' }) }}
            {{ form_row(participantForm.telephone, { label: 'Téléphone' }) }}
            {{ form_row(participantForm.mail) }}
            {{ form_row(participantForm.plainPassword, { label: 'Mot de passe' }) }}
            {{ form_row(participantForm.confirmation, { label: 'Confirmation' }) }}
            {{ form_row(participantForm.campus, { label: 'Campus' }) }}
            {{ form_row(participantForm.imageFile) }}
            {{ form_end(participantForm) }}
        </div>
    </div>
    <div class="profil-buttons">
        <button type="submit" class="btn-sortie">Enregistrer</button>
        <button type="reset" class="btn-sortie">Annuler</button>
    </div>
{% endblock %}

