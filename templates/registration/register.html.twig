{% extends 'base.html.twig' %}

{% block title %}Nouveau profil{% endblock %}

{% block body %}

    <div class="register-form">
        <h1>S'inscrire</h1>
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.pseudo, { label: 'Pseudo' }) }}
            {{ form_row(registrationForm.prenom, { label: 'Prénom' }) }}
            {{ form_row(registrationForm.nom, { label: 'Nom' }) }}
            {{ form_row(registrationForm.telephone, { label: 'Téléphone' }) }}
            {{ form_row(registrationForm.mail) }}
            {{ form_row(registrationForm.plainPassword, { label: 'Mot de passe' }) }}
            {{ form_row(registrationForm.campus, { label: 'Campus' }) }}
            {{ form_row(registrationForm.actif, { label: 'Actif' }) }}
            {{ form_row(registrationForm.administrateur, { label: 'Administrateur' }) }}
            <button type="submit" class="btn">Enregistrer</button>
            <button type="reset" class="btn">Annuler</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
