<header>
    <a  class="main-title" href="{{ path('main_connecte') }}">
        <img class="logo-sortir" src="{{ asset('ressources/images/logo-sortir.jpg') }}" alt="sortir.com logo">
    </a>
    <div class="links">
    {% if not app.user %}
        <a class="link" href="{{ path('app_register') }}"><i class="fa-solid fa-pen-to-square"></i></a>
        <a class="link" href="{{ path('app_login') }}"><i class="fa-solid fa-right-to-bracket"></i></a>
    {% endif %}
