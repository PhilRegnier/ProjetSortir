        <a class="link" href="{{ path('main_connecte') }}"><i class="fa-solid fa-house"></i></a>
        <a class="link" href="{{ path('participant_monprofil') }}"><i class="fa-solid fa-user"></i></a>
        <a class="link" href="{{ path('app_logout') }}"><i class="fa-solid fa-right-from-bracket"></i></a>
