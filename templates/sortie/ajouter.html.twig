{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="creer-sortie-title">Créer une sortie</h1>
    <div class="creer-sortie-form">
        <div class="creer-sortie-droite">
            {% form_theme sortieForm 'bootstrap_5_layout.html.twig' %}
            {{ form_start(sortieForm) }}
            {{ form_row(sortieForm.nom, { label: "Nom :" }) }}
            {{ form_row(sortieForm.dateHeureDebut, { label: "Date et heure de la sortie :" }) }}
            {{ form_row(sortieForm.dateLimiteInscription, { label: "Date limite d'inscription :" }) }}
            {{ form_row(sortieForm.nbInscriptionsMax, { label: "Nombre de places :" }) }}
            {{ form_row(sortieForm.duree, { label: "Durée (en minutes) :" }) }}
            {{ form_row(sortieForm.infosSortie, { label: "Description et infos :" }) }}
        </div>
        <div class="creer-sortie-gauche">
            Campus : {{ app.user.campus.nom }}
            <div class="mb-3 row">
                <label for="ville">Ville</label>
                <div class="col-sm-10" name="ville[nom]">
                    <select class="form-select" id="ville" name="sortie_form_ville">
                        {% for ville in villes %}
                            <option value="{{ ville.id }}">{{ ville.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="mb-3 row">
                <label for="lieu">Lieu</label>
                <div class="col-sm-10" name="lieu[nom]">
                    <select class="form-select" id="lieu" name="lieu_id"></select>
                    <a class="btn btn-primary" onclick="function open_mod(){var modal = document.getElementById('modal'); modal.className += 'open';} open_mod(); return false;">+</a>
                </div>
                <div id="modal">
                    <div class="mask"></div>
                    <div class="container auto">
                        <div class="message"></div>
                        <h1 class="modif-sortie-title">Créer un lieu</h1>
                        {{ form_start(lieuForm, { autocomplete: 'off' }) }}
                        {{ form_row(lieuForm.ville, { label: "Ville : ", id: "ville" }) }}
                        <p>Code postal : <span id="codePostal"></span></p>
                        {{ form_row(lieuForm.nom, { label: "Nom* : "}) }}
                        {{ form_row(lieuForm.rue, { label: "Rue* : ", id: "rue", name: "rue", placeholder: "Rue" }) }}
                        {{ form_row(lieuForm.latitude, { label: "Latitude : ", id: "latitude" }) }}
                        {{ form_row(lieuForm.longitude, { label: "Longitude : ", id: "longitude" }) }}
                        <button type="submit" class="btn">Enregistrer</button>
                        <button type="reset" class="btn">Annuler</button>
                        {{ form_end(lieuForm) }}

                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
                        <script src="{{ asset('js/ajout_lieu.js') }}"></script>
                        <a href="" onclick="function close_mod(){var modal = document.getElementById('modal'); modal.className += 'close';} close_mod(); return false;" class="close">&times;</a>
                    </div>
                </div>
            </div>

            <p>Code postal : <span id="codePostal"></span></p>
            <p>Rue : <span id="rue"></span></p>
            <p>Latitude : <span id="latitude"></span></p>
            <p>Longitude : <span id="longitude"></span></p>
        </div>
    </div>


    <button type="submit" class="btn-sortie">Enregistrer</button>

    <button type="reset" class="btn-sortie">Annuler</button>
    {{ form_end(sortieForm) }}

    <script>
        function ajouterLieu() {
            if (document.getElementById("panel-lieu").style.display === "block") {
                document.getElementById("panel-lieu").style.display = "none";
            } else {
                document.getElementById("panel-lieu").style.display = "block"
            }
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="{{ asset('js/ajout_sortie.js') }}"></script>

{% endblock %}
{% block title %}
    Sortir.com - Ajout d'une sortie
{% endblock %}

