{% extends 'base.html.twig' %}

{% block body %}
    <h1>Créer une sortie</h1>
    {{ form_start(ajouterSortieForm) }}
    {{ form_row(ajouterSortieForm.nom, { label: "Nom :" }) }}
    {{ form_row(ajouterSortieForm.dateHeureDebut, { label: "Date et heure de la sortie :" }) }}
    {{ form_row(ajouterSortieForm.dateLimiteInscription, { label: "Date limite d'inscription :" }) }}
    {{ form_row(ajouterSortieForm.nbInscriptionsMax, { label: "Nombre de places :" }) }}
    {{ form_row(ajouterSortieForm.duree, { label: "Durée :" }) }}
    {{ form_row(ajouterSortieForm.infosSortie, { label: "Description et infos :" }) }}
    {{ form_row(ajouterSortieForm.campus, { label: "Campus :" }) }}
    {{ form_row(ajouterSortieForm.ville, { label: "Ville :" }) }}
    {{ form_row(ajouterSortieForm.lieu, { label: "Lieu :" }) }}
    {{ form_row(ajouterSortieForm.rue, { label: "Rue :" }) }}
    {{ form_row(ajouterSortieForm.codePostal, { label: "Code postal :" }) }}
    {{ form_row(ajouterSortieForm.latitude, { label: "Latitude :" }) }}
    {{ form_row(ajouterSortieForm.longitude, { label: "Longitude :" }) }}
    <button type="submit" class="btn">Enregistrer</button>
    <button type="reset" class="btn">Annuler</button>
    {{ form_end(ajouterSortieForm) }}
{% endblock %}

