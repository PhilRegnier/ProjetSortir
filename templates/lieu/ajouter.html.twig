{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cr√©er un lieu</h1>
    {{ form_start(lieuForm, { autocomplete: 'off' }) }}
    {{ form_row(lieuForm.ville, { label: "Ville : ", id: "ville" }) }}
    <p>Code postal : <span id="codePostal"></span></p>
    {{ form_row(lieuForm.nom, { label: "Nom* : "}) }}
    {{ form_row(lieuForm.rue, { label: "Rue* : ", id: "rue", name: "rue", placeholder: "Rue" }) }}
    {{ form_row(lieuForm.latitude, { label: "Latitude : ", id: "latitude" }) }}
    {{ form_row(lieuForm.longitude, { label: "Longitude : ", id: "longitude" }) }}
    <button type="submit" class="btn">Enregistrer</button>
    <button type="reset" class="btn">Annuler</button>
    {{ form_end(lieuForm) }}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="{{ asset('js/ajout_lieu.js') }}"></script>

{% endblock %}

{% block title %}
    Sortir.com - Ajout d'un lieu
{% endblock %}